<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaekkeurApp.MainPage">

    <StackLayout Background="#455357">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Entry x:Name="_entry"
             Placeholder="Enter event to be reminded of" TextColor="#F3FCFF"/>
            <TimePicker Grid.Row="1" x:Name="TodayTime" Time="12:00:00"
                            Format="T"
                            TextColor="#F3FCFF"
                            PropertyChanged="OnTimePickerPropertyChanged"/>
            <StackLayout Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                <Label/>
                <Switch x:Name="_switch"
                        OnColor="ForestGreen"
                        ThumbColor="#8B9091"
                        HorizontalOptions="EndAndExpand"
                        Toggled="OnSwitchToggled"/>
            </StackLayout>
        </Grid>
        <Frame BackgroundColor="#455357">
            <Button 
                Text="+"
                BackgroundColor="#000094"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                CornerRadius="40"
                HeightRequest="58"
                WidthRequest="58" />
        </Frame>
        <Entry TextColor="#F3FCFF" x:Name="TestEntry" Placeholder="Klokkeslet i sekunder" />
        <Button TextColor="#F3FCFF" BackgroundColor="#000094" x:Name="TestButton" Text="Sæt Alarm" Clicked="TestButton_Clicked" />
    </StackLayout>

</ContentPage>
